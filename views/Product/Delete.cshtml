@model MyEcommerceAdmin.Models.Product
@{
    ViewBag.Title = "Conform Delete Product";
}

<div class="container">
    <div class="row">

        @*back button*@
        <div class="counter mt-4">
            <div class="row">
                <div class="col-6 col-lg-3">
                    <a href="@Url.Action("Index", "Product")" class="btn btn-danger btn-sm fs-4 mb-4"> << Back</a>
                </div>
            </div>
        </div>


        <div class="col">
            <div class="col-md-12">
                @using (Html.BeginForm("Delete", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.HiddenFor(x => x.ProductID)
                    @Html.AntiForgeryToken()
                    <section class="section about-section gray-bg" id="about">
                        <div class="container">
                            <div class="row align-items-center flex-row-reverse">
                                <h2 class="dark-color text-danger">Conform Delete This Book</h2>
                                <div class="col-lg-8">
                                    <div class="about-text go-to">


                                        <h3 class="theme-color lead fs-2">@Model.Name</h3>
                                        <div class="col-md-12">
                                            <label class="fs-4">Product Description</label>
                                            <p style="text-align:justify;">@Model.ShortDescription</p>
                                        </div>
                                        <div class="row about-list">
                                            <div class="col-md-6">
                                                <div class="media">
                                                    <label class="fs-4">Unit Price</label>
                                                    <p>@Model.UnitPrice</p>
                                                </div>
                                                <div class="media">
                                                    <label class="fs-4">Privious Price</label>
                                                    <p>@Model.OldPrice</p>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="media">
                                                    <label class="fs-4">Current Stock</label>
                                                    <p>@Model.UnitInStock</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4 @*d-flex justify-content-end*@">
                                    <div class="about-avatar">
                                        <img src="@Url.Content(Model.PicturePath)" title="No Image" alt="" width="250" height="250">
                                    </div>
                                </div>
                            </div>
                            <div class="counter mt-4 justify-content-end">
                                <div class="row justify-content-end">
                                    
                                    <div class="col-6 col-lg-3">
                                        <button type="submit" class="btn btn-danger fs-4"><i class="fa-solid fa-trash fs-4"></i>&nbsp;Conform Delete</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                }
            </div>
        </div>
    </div>
</div>

