@model MyEcommerceAdmin.Models.ProductVM
@{
    ViewBag.Title = "Product Details";
}

<section class="section about-section gray-bg" id="about">
    <div class="container">
        @*back button*@
        <div class="counter mt-4">
            <div class="row">
                <div class="col-6 col-lg-3">
                    <a href="@Url.Action("Index", "Product")" class="btn btn-danger btn-sm fs-4"> << Back</a>
                </div>
            </div>
        </div>

        <div class="row align-items-center flex-row-reverse">
            <div class="col-lg-8">
                <div class="about-text go-to">




                    <h3 class="theme-color lead fs-2">@Model.Name</h3>
                    <div class="col-md-12">
                        <label class="fs-4">Book Description</label>
                        <p style="text-align:justify;">@Model.ShortDescription</p>
                    </div>
                    <div class="row about-list">
                        <div class="col-md-6">
                            <div class="media">
                                <label class="fs-4">Current Price</label>
                                <p>@Model.UnitPrice</p>
                            </div>
                            <div class="media">
                                <label class="fs-4">Privious Price</label>
                                <p>@Model.OldPrice</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="media">
                                <label class="fs-4">Writter</label>
                                <p>@Html.DropDownListFor(x => x.SupplierID, ViewBag.supplierList as SelectList, new { @class = "form-control form-control-plaintext text-muted" })</p>
                            </div>
                            <div class="media">
                                <label class="fs-4">Category</label>
                                <p>@Html.DropDownListFor(x => x.CategoryID, ViewBag.categoryList as SelectList, new { @class = "form-control form-control-plaintext" })</p>
                            </div>
                        </div>

                        @*<div class="col-md-6">
                            <div class="media">
                                <label class="fs-4">Current Stock</label>
                                <p>@Model.UnitInStock</p>
                            </div>
                        </div>*@
                    </div>
                </div>
            </div>
            <div class="col-lg-4 @*d-flex justify-content-end*@">
                <div class="about-avatar">
                    <img src="@Url.Content(Model.PicturePath)" title="No Image" alt="" width="250" height="250">
                </div>
                <h1>PDF Example</h1>
                <p>Open a PDF file <a href="@Url.Content(Model.PicturePath)">example</a>.</p>
            </div>
        </div>
        @*edit delete btn*@
        <div class="counter mt-4 ">
            <div class="row justify-content-md-end align-self-end">
                <div class="col-6 col-lg-3 justify-content-md-end align-self-end">
                    @*<a href="@Url.Action("Index", "Product")" class="btn btn-danger btn-sm fs-4"> << Back</a>*@

                    <a href="@Url.Action("Edit", "Product", new {id = Model.ProductID })" class="btn btn-secondary btn-sm fs-4">Edit</a>
                    <a href="@Url.Action("Delete", "Product", new {id = Model.ProductID })" class="btn btn-danger btn-sm fs-4">Delete</a>
                </div>
            </div>
        </div>
    </div>
</section>
